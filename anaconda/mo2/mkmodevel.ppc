def show_usage()
  print <<END_OF_USAGE
Usage: mkmodevel [options]
  -c   core CD
  -d   devel CD
  -h   show this message
END_OF_USAGE
  exit
end

case ARGV[0]
when "-c"
  MK_CORE = true
  MK_DEVEL = false
  MK_FULL = false
