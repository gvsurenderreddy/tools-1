end

def do_cmd cmd
  begin
    f = open LOG, "a"
    f.print "=====================================\n"
    f.print Time.now.strftime("%H:%M:%S "), cmd, "\n"
    log = `#{cmd} 2>&1`
    status = $?
    f.print log
    f.print "\n"
    raise if status != 0
    f.close
  rescue
    print "\n#{PROG}: Aborted - #{cmd}(#{$?})\n"
    STDERR.flush
    STDOUT.flush
    f.close
    exit $?
  end
end

